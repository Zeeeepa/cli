// From https://modelcontextprotocol.io/quickstart/server#core-mcp-concepts
{
  "extends": "@total-typescript/tsconfig/bundler/no-dom/library-monorepo",

  "compilerOptions": {
    // https://nodejs.org/docs/latest-v23.x/api/esm.html#mandatory-file-extensions
    // https://www.typescriptlang.org/vo/tsconfig/#allowImportingTsExtensions
    "rewriteRelativeImportExtensions": true,

    // For `import { name, version }`
    // https://www.typescriptlang.org/tsconfig#resolveJsonModule
    "resolveJsonModule": true,

    // https://tsdown.dev/options/dts#enable-in-tsdown-config
    "declaration": true,
    "declarationMap": true,

    // https://tsdown.dev/options/dts#with-isolateddeclarations
    "allowJs": false

    // Disabled for ArkType
    // "isolatedDeclarations": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
