// From https://modelcontextprotocol.io/quickstart/server#core-mcp-concepts
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // https://tsdown.dev/options/dts#enable-in-tsdown-config
    "declaration": true,
    "declarationMap": true,
    // https://tsdown.dev/options/dts#with-isolateddeclarations
    "isolatedDeclarations": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
